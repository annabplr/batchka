<h1>Liste de course</h1>
<% if @shopnone.present? %>
  <div class="col-xs-12 col-sm-4">
  <ul class="list-inline">
    <% @shopnone.each do |ingredient|  %>
      <% if @menu.user == current_user %>
        <%= render 'ingredients/showupdate', menu: @menu, ingredient: ingredient %>
        <% else %>
        <li class="ingredient-notuser">
        <span class="todo-ingname todo-ingname-stock"><%= ingredient.name %></span><span class="todo-ingplat"> (<% if ingredient.quantity.present? %> <%= ingredient.quantity %> - <% end %><%= ingredient.plat.name %>)</span>
