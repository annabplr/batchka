<h1>Show Day</h1>
<h2> <%= @day.weekday %> </h2>
 <% @day.repas.each do |repa| %>
   <h3> <%= repa.repastype %> </h3>
   <% repa.plats.each do |plat| %>
     <p> <%= plat.plattype %> : <%= link_to plat.name, menu_day_repa_plat_path(menu_id: @menu.id,day_id: plat.repa.day.id ,repa_id:plat.repa.id, id: plat.id)  %> :
      <% plat.ingredients.each do |ingredient| %>
      <%= ingredient.name %> -

     <% end %></p>
   <% end %>
 <% end %>
