<div class="container navbar-space">
<h1>Mon menu</h1>
<div class="">
  <% @days.each do |day| %>
    <% if day.plats.name != nil %>
      <h2> <%= day.weekday %></h2>
    <% end %>
    <div class="finalmenu row">
      <% day.repas.each do |repa| %>
      <div class="<% if day.repas.size == 1 %>col-xs-12 <% else %> col-xs-6 <% end %> col-sm-3 ">
        <% if repa.plats.size != 0 %>
      <div class="plat-finalmenu">
        <h3> <%= repa.repastype %></h3>
        <div>
        <ul class="list-unstyled">
        <% repa.plats.sort{ |x,y| x.id <=> y.id }.each do |plat| %>
          <% if plat.name != nil  %>
            <li> <span class="menu-plattype"><%= plat.plattype %></span><span class="menu-platname"><%= plat.name %></span> <% if plat.link.present? %><span class="menu-platrecette"><%= link_to plat.link, target: :_blank do %><i class="fas fa-arrow-circle-right"></i> <%end %>
              <% end %></span></li>
          <% end %>
        <% end %>
        </ul>
        </div>
      </div>
      <% end %>
      </div>
      <% end %>
    </div>
  <% end %>
</div>

  <%= link_to "Modifier mes listes", menu_ingredients_path(menu_id: @menu.id)  %>
  <%= link_to "Mon menu", menu_days_path(menu_id: @menu.id) %>
  <%= link_to "Ma liste de courses", menu_repas_path(menu_id: @menu.id) %>
  <%= link_to "Ma todo list", menu_todos_path(menu_id: @menu.id)  %>

</div>
