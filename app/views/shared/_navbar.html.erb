<div class="navbar-batchka">
  <!-- Logo -->
  <%= link_to menus_path, class: "navbar-batchka-brand" do %>
    <p class="logo">batchka</p>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-batchka-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <!-- Avatar with dropdown menu -->
      <div class="navbar-batchka-item">
        <div class="dropdown">
          <div class= "avatar dropdown-toggle", id= "navbar-batchka-menu", data-toggle="dropdown"> <i class="fas fa-ellipsis-h"></i> </div>
          <ul class="dropdown-menu dropdown-menu-right navbar-batchka-dropdown-menu">
            <li>
              <%= link_to menus_path do %>
                <i class="fas fa-utensils"></i>  <%= t(".profile", default: "Mes menus") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="far fa-user-circle"></i>  <%= t(".settings", default: "Mon profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Me déconnecter") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "A propos", about_path, class: "navbar-batchka-item navbar-batchka-link" %>

      <%= link_to t(".sign_in", default: "Se connecter"), new_user_session_path, class: "navbar-batchka-item navbar-batchka-link" %>
    <% end %>
  </div>
</div>
  <!-- Dropdown list appearing on mobile only -->

<div class="navbar-batchka-bottom">
  <div class="navbar-batchka-item-mobile hidden-md hidden-lg">

    <% if user_signed_in? %>
    <div class="dropup">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-batchka-dropdown-menu">
      <li><%= link_to "Mes menus", menus_path %></li>

      <li><%= link_to "Mon profil", edit_user_registration_path %></li>
      <li><%= link_to "Me déconnecter", destroy_user_session_path %></li>
    </ul>
    </div>
    <% else %>
    <div class="dropup">
      <i class="fas fa-ellipsis-h" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-batchka-dropdown-menu">
        <li><%= link_to "M'inscrire", new_user_registration_path %></li>
        <li> <%= link_to "Me connecter", new_user_session_path %></li>
        <li><a href="/about">En savoir plus</a></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>

