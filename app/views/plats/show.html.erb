<div class="container navbar-space">

<%= simple_form_for([@menu, @plat], url: menu_day_repa_plat_path(menu_id: @menu.id, day_id: @day.id, repa_id: @repa.id, id: @plat.id), method: :put, remote: true) do |f| %>
<div class="edit_platname">
  <div class="form_platname form-inline">
    <h1><%= f.input :name, label: false %></h1>

  </div>
  <div>
    <%= button_tag type: 'submit', class: "submit-buttons" do %>
        <i class="fas fa-check"></i>
    <% end %>
    </div>
</div>

<% end %>


<h2>Ingredients principaux : </h2>
<div class="platsshow-inglist">
<ul id="ingredientsid"  class="row">
<% @plat.ingredients.each do |ingredient| %>

  <%= render 'ingredients/show', menu: @menu, day: @day, repa: @repa, id: @plat, ingredient: ingredient %>

<% end %>
</ul>
</div>
<br>
<div class="row">
  <div class="col-xs-12">
<h3>Ajouter un nouvel ingr√©dient : </h3>
<%= render 'ingredients/form', menu_id: @menu.id, day_id: @day.id, repa_id: @repa.id, id: @plat.id %>
</div>
</div>

<div class="links-menu ingredients-index-links links-menushow">
            <%= link_to menu_path(@menu.id) do  %>
        <div class="link-menu1">
          <i class="fas fa-arrow-left"></i>
          <p>RETOUR</p>
        </div>
        <% end %>


            <%= link_to menu_ingredients_path(menu_id: @menu.id) do  %>
        <div class="link-menu1">
          <i class="fas fa-arrow-right"></i>
          <p>CREER LISTES</p>
        </div>
        <% end %>

            </div>
</div>
