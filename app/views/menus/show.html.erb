<div class="container">
  <h1>Menus#show</h1>

  <h4>Semaine du <%= @startday[2] %> / <%= @startday[1] %> / <%= @startday[0] %>  </h2>


  <% @days.each do |day| %>
    <div class="menu-week">

      <%= day.weekday %>
      <%= link_to menu_day_path(menu_id: @menu.id,id: day.id) do  %>
        <i class="fas fa-pencil-alt"></i>
      <% end %>

      <br>
        <div class="display_all_repas">
          <% day.repas.each do |repa| %>

            <div class="display_repa">
              <div class="repa_name">
            <%= repa.repastype %>
              </div>

            <div class="repa_detail">
                <% repa.plats.each do |plat| %>
                  <%= link_to menu_day_repa_plat_path(menu_id: @menu.id,day_id: plat.repa.day.id ,repa_id:plat.repa.id, id: plat.id) do %>
                  <%= plat.name %>
                  <% end %>
                <% end %>
            </div>
            </div>

          <% end %>
        </div>
    </div>
  <% end %>

<%= link_to "Tous mes menus", menus_path  %>
</div>
